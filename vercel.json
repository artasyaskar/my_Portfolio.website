{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/:path((?!api/|assets/|projects\\.html).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/Artas_Yaskar_CV.pdf",
      "headers": [
        {
          "key": "Content-Disposition",
          "value": "attachment; filename=\"Artas_Yaskar_CV.pdf\""
        }
      ]
    }
  ]
}
